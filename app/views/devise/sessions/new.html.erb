<%= stylesheet_link_tag "register" %>

<div class="log">
<h2 align="center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <form>
  <div class="mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email", style: "background: none" %>
  </div>

  <div class="mb-3">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password", style: "background: none" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
    <%= f.submit "Log in", data: {turbo: :false}, class: "btn btn-light" %>

</form>
  
<% end %>

<%= render "devise/shared/links" %>
<br>
</div>